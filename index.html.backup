    <style>
        :root {
            --primary-color: #2E7D32;
            --secondary-color: #4CAF50;
            --accent-color: #FF9800;
            --dark-text: #171717;
            --light-text: #ffffff;
            --card-bg: rgba(255, 255, 255, 0.15);
            --blur-strength: blur(12px);
            --transition: all 0.1s ease;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            -webkit-tap-highlight-color: transparent;
        }

        body {
            font-family: 'Inter', sans-serif;
            font-weight: 500;
            margin: 0;
            padding: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            background-image: url('PNGs/pic5.png');
            background-size: cover;
            background-position: center;
            background-repeat: revert-layer;
            position: relative;
            -webkit-text-size-adjust: 100%;
            touch-action: manipulation;
            background-position-y: -150px;
           
        }

        .container {
            width: 100%;
            max-width: 460px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .button-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            width: 100%;
            margin-bottom: 15px;
        }

        .grid-button {
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            user-select: none;
            cursor: pointer;
            color: var(--dark-text);
            border-radius: 40px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.4), 0 1px 1px rgba(0,0,0,0.3);
            background-color: rgba(255, 255, 255, 0);
            backdrop-filter: blur(10px);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            min-height: 44px;
        }

        .catalog-btn {
            font-size: clamp(20px, 6vw, 28px);
            font-weight: 700;
            line-height: 1.1;
            aspect-ratio: 1/1;
            background-color: rgba(255, 255, 255, 0);
        }

        .water-btn {
            font-family: 'Inter', sans-serif;
            font-weight: 700;
            font-size: clamp(24px, 8vw, 32px);
            height: 100%;
            min-height: 120px;
        }

        @media (max-width: 380px) {
            .water-btn {
                min-height: 110px;
            }
        }

        .button-textw {
            position: absolute;
            z-index: 2;
            font-weight: 700;
            color: var(--dark-text);
            width: 100%;
            text-align: center;
            top: 50%;
            transform: translateY(-50%);
            font-size: clamp(20px, 6vw, 32px);
        }

        .water-canvas {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
        }

        .explore-btn {
            grid-column: span 2;
            height: 180px;
            font-size: clamp(28px, 9vw, 42px);
            font-weight: 800;
            background: rgba(255, 255, 255, 0);
            background-image: url('PNGs/explore.png');
            background-size: cover;
            background-position-y: 24px;
            background-repeat: no-repeat;
            position: relative;
            z-index: 1;
            border-radius: 35px;
        }

        .categories-btn {
            font-size: clamp(16px, 4.5vw, 20px);
            font-weight: 600;
            line-height: 1.2;
            aspect-ratio: 1/1;
            padding: 8px;
        }

        .feedback-btn, .inbox-btn {
            height: 90px;
            font-size: clamp(16px, 4vw, 18px);
            font-weight: 600;
            border-radius: 27px;
        }

        .space-btn {
            position: relative;
            font-size: clamp(24px, 7vw, 32px);
            font-weight: 700;
            line-height: 1.1;
            aspect-ratio: 1/1;
            color: var(--dark-text);
            margin-top: -69%;
            z-index: 2;
        }

        @media (max-width: 431px) {
            .space-btn {
                margin-top: -101px;
            }
        }

        @media (max-width: 415px) {
            .space-btn {
                margin-top: -97px;
            }
        }

        @media (max-width: 413px) {
            .space-btn {
                margin-top: -95px;
            }
        }

        @media (max-width: 391px) {
            .space-btn {
                margin-top: -84px;
            }
        }

        @media (max-width: 377px) {
            .space-btn {
                margin-top: -77px;
            }
        }

        .space-btn .stars {
            position: absolute;
            inset: 0;
            z-index: 0;
            pointer-events: none;
        }

        .space-btn .star {
            position: absolute;
            width: 6px;
            height: 6px;
            background: white;
            clip-path: polygon(50% 0%, 60% 40%, 100% 50%, 60% 60%, 50% 100%, 40% 60%, 0% 50%, 40% 40%);
            opacity: 1;
            animation: twinkleStar 3s infinite ease-in-out;
            filter: drop-shadow(0 0 4px white);
            transition: transform 1s ease;
        }

        @keyframes twinkleStar {
            0%, 100% {
                opacity: 0.3;
                transform: scale(1);
            }

            50% {
                opacity: 1;
                transform: scale(1.6) rotate(2deg);
            }
        }

        .space-btn span {
            position: relative;
            z-index: 1;
        }

        .search-container {
            display: flex;
            justify-content: center;
            width: 100%;
            height: 60px;
            align-items: center;
            background: var(--card-bg);
            backdrop-filter: var(--blur-strength);
